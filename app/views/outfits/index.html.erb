<%= form_tag "/", :method => :get, :class => 'form-inline' do %>
	<h3>Need some inspiration on what to wear?</h3>
	<%= label_tag :q, 'Today''s temperature:' %>
	<%= text_field_tag :q, params[:q], :class => 'input-small' %>
	<span>&deg;F</span>
	<%= submit_tag "Show me clothes!", :class => 'btn' %> 
<% end %>

<h4>weather mood board</h4>
<hr />
	<% if @outfits.empty? %>
		<div class="alert alert-info">Sorry, no outfits were found.  Want to <%= link_to "Upload", new_outfit_path %> one?</div>
	<% else %>
		<ul class="thumbnails">
				<% @outfits.each do |outfit| %>
				<li class="span3">
					<a href="<%= outfit_path(outfit) %>" class="thumbnail">
						<img data-src="holder.js/180" style="height: 100%; width: 180px; display: block;" src="<%= outfit.image.url %>" alt="<%= outfit.description%>"/>
					</a>
				</li>
				<% end %>
		</ul>
	<% end %>