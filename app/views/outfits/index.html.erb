<%= form_tag "/", :method => :get do %>
	<b>Need some inspiration on what to wear?</b>
	<br>Enter in today's weather condition:
	<%= text_field_tag :q, params[:q] %> F
	<%= submit_tag "Show me clothes!"%></br> 
<% end %>

<h4> weather mood board </h4>
<div class="container">
	<% @outfits.each do |outfit| %>
		<div class="row">
			:before
			<div class="col-xs-6 col-md-3">
				<a href="<%= outfit_path(outfit) %>" class="thumbnail">
					<img data-src="holder.js/180x100%" style="height: 100%; width: 180px; display: block;" src="<%= outfit.image.url %>" alt="<%= outfit.description%>"/>
				</a>
			</div>
		</div>
	<% end %>
</div>