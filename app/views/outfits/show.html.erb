<div class="row">
	<div class="span4 offset1">
		<a href="<%= @outfit.url %>"><img src="<%= @outfit.image.url %>"/></a>
	</div>
	<div class="span4 offset1">
		<h3>Items in this outfit:</h3>
		<h4>Description</h4>
		<p><%= @outfit.description %></p>
		<h4>Temperature</h4>
		<p>This outfit is good for weather between <%= @outfit.min_temp %> &deg;F and <%= @outfit.max_temp %> &deg;F.</p>
		<h4>Uploaded by <%= @outfit.user.email %></h4>
		<%= link_to "Edit Outfit", edit_outfit_path(@outfit), :class => 'btn btn-small' %>
		<%= link_to "Delete Outfit", outfit_path(@outfit), :confirm => "Are you sure?", :method => :delete, :class=> 'btn btn-small btn-danger' %>
	</div>
</div>